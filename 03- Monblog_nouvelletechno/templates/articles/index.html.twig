{% extends 'base.html.twig' %}

{% block title %}{% trans %}List of articles{% endtrans %}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">{% trans %}List of articles{% endtrans %}</h1>
    {% for message in app.flashes('message') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% for article in articles %}
        <h2><a href="{{ path('article', {'slug': article.slug}) }}">{{ article.titre }}</a></h2>
        <div>{{ article.contenu|raw }}</div>
    {% endfor %}
    {{ knp_pagination_render(articles) }}
</div>
{% endblock %}